<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import com.sun.javafx.scene.control.IntegerField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.avsystem.gui.controllers.StartViewController"
            prefHeight="700.0" prefWidth="800.0">

    <VBox alignment="CENTER" spacing="10">
        <!--Checkbox to debug javafx IntegerField which cannot be updated-->
        <CheckBox mouseTransparent="true"/>
        <Label text="Number of floors:" />
        <IntegerField fx:id="floorField" />
        <Label text="Number of elevators:" />
        <IntegerField fx:id="elevatorField" />
        <Button onAction="#start" text="Start simulation" />
        <padding><Insets left="320" top="100" /></padding>
    </VBox>
</AnchorPane>
